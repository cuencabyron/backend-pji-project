{
  "compilerOptions": {
    // Entrada / salida de archivos
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",

    // Node moderno con ESM
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",

    // Tipos de Node
    "types": ["node"],

    // Salida de tipos / mapas (opcional)
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Chequeos estrictos
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Performance / compatibilidad
    "skipLibCheck": true,

    // Recomendado para TypeORM (decoradores)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Calidad de vida
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Suele evitar conflictos con campos de clase + decorators
    "useDefineForClassFields": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}